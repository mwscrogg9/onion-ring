<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/masterlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizScreen" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/LightDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D"
            android:padding="6dp"
            android:onClick="onClickLightDark"/>
            
           
        
        <TextView
            android:id="@+id/quizsection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="6dp"
            android:textSize="16sp"/>
        
        <TextView
             android:id="@+id/quizprogress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="8"
            android:gravity="center"
            android:padding="6dp"
            android:textSize="16sp"/>
        
        <TextView
            android:id="@+id/quizflags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="8"
            android:gravity="right"
            android:padding="6dp"
            android:textSize="16sp"/>
        
        <ImageView
    	  	    android:id="@+id/editFlag"
    	  	    android:layout_width="0dp"
    	  	    android:layout_weight="1"
    	  	    android:layout_height="45dp"
    	  	    android:adjustViewBounds="true"
    	  	    android:scaleType="fitCenter"
    	  	    android:layout_marginRight="10dp"
    	  	    android:src="@drawable/greenflaggray"
    	  	    android:onClick="setEditFlag" />
        
    </LinearLayout>
    
         <TextView
              android:id="@+id/quizhint"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp"
             android:layout_marginTop="8dp"
             android:layout_weight="0"
             android:gravity="center"
             android:minHeight="100dp"
             android:padding="6dp"
             android:text="Always On"
             android:textSize="42sp"
             android:onClick="clicknext" />
         
          <TextView
              android:id="@+id/quizanswer"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="8dp"
              android:layout_weight="0"
              android:gravity="center"
              android:minHeight="100dp"
              android:padding="6dp"
              android:text="Shadable"
              android:textSize="42sp"
              android:onClick="clicknext" />
          
          <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:padding="6dp" />
          
    	  <LinearLayout
       	 	 android:layout_width="match_parent"
        	 android:layout_height="wrap_content"
        	 android:orientation="horizontal" >
        
    	  	<ImageView
    	  	    android:id="@+id/quizleftflag"
    	  	    android:layout_width="180dp"
    	  	    android:layout_height="180dp"
    	  	    android:adjustViewBounds="true"
    	  	    android:scaleType="fitCenter"
    	  	    android:layout_marginRight="10dp"
    	  	    android:src="@drawable/flagcolor"
    	  	    android:onClick="setAsFlagged" />
    	  	
    	  	<Button
    	  	    android:layout_width="80dp"
    	  	    android:layout_height="80dp"
    	  	    android:layout_gravity="center_vertical"
    	  	    android:layout_weight="1"
    	  	    android:text="&lt;&lt;" 
    	  	    android:onClick="testbyflag"/>
    	  	
    	  	<Button
    	  	    android:layout_width="80dp"
    	  	    android:layout_height="80dp"
    	  	    android:layout_gravity="center_vertical"
    	  	    android:layout_weight="1"
    	  	    android:text="&lt;"
    	  	    android:onClick="clickback" />
    	  		
    	  	<Button
    	  	    android:layout_width="80dp"
    	  	    android:layout_height="80dp"
    	  	    android:layout_gravity="center_vertical"
    	  	    android:layout_weight="1"
    	  	    android:text=">"
    	  	    android:onClick="clicknext" />
    	  			
    	  	<Button
    	  	    android:layout_width="80dp"
    	  	    android:layout_height="80dp"
    	  	    android:layout_gravity="center_vertical"
    	  	    android:layout_weight="1"
    	  	    android:text="X"
    	  	    android:onClick="clickstop" />
    	  	
   	  	
    	  	<ImageView
    	  	     android:id="@+id/quizrightflag"
    	  	    android:layout_width="180dp"
    	  	    android:layout_height="180dp"
    	  	    android:adjustViewBounds="true"
    	  	    android:scaleType="fitCenter"
    	  	    android:layout_marginLeft="10dp"
    	  	    android:src="@drawable/flaggray"
    	  	    android:onClick="setAsFlagged"  />
    	  
    	  </LinearLayout>
    	      
             

</LinearLayout>